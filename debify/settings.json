{
    "source_tarball_regex": "PEAR",
    "add_to_build_requires": [
        "libargon2-1",
        "libargon2-dev",
        "libedit-dev",
        "libedit2"
    ],
    "remove_from_requires": [
        "scl-utils-build",
        "scl-utils",
        "autotools-latest-autoconf",
        "%scl_runtime"
    ],
    "add_to_sources": [
        "PEAR*.tgz"
    ],
    "dont_relativise_ontar": 1,
    "adjust_install_file_src": [
        [ "opt\/cpanel\/ea-php[1-9][0-9]\/root", "" ],
        [ "^\/var\/lib\/pear", "debian\/tmp\/var\/cpanel\/lib\/pear" ]
    ]
}
